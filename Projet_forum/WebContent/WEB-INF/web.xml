<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Forum</display-name>
  <servlet>
    <servlet-name>accueil</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.AccueilServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>creation_topic</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.CreationTopicServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>thread</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.ThreadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>creation_post</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.CreationPostServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>enregistrement</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.EnregistrementServlet</servlet-class>
  </servlet>
  <filter>
    <filter-name>authentification</filter-name>
    <filter-class>fr.acceis.forum.servlet.AuthentificationFilter</filter-class>
  </filter>
  <servlet-mapping>
    <servlet-name>accueil</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>creation_topic</servlet-name>
    <url-pattern>/creation_topic</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>thread</servlet-name>
    <url-pattern>/thread</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>creation_post</servlet-name>
    <url-pattern>/creation_post</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>enregistrement</servlet-name>
    <url-pattern>/save</url-pattern>
  </servlet-mapping>
  <filter-mapping>
    <filter-name>authentification</filter-name>
    <url-pattern>/creation_post</url-pattern>
    <url-pattern>/creation_topic</url-pattern>
  </filter-mapping>
</web-app>